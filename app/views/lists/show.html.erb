<div class="container m-3">
  <div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?<%= @list.name %>);">
    <div class="container">
      <h1><%= @list.name  %></h1>
    </div>
  </div>
  <div class="container m-3">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-info"%>
    <%= link_to "Back to main page", lists_path, class: "btn btn-light"%>
    <div>
      <h3>Movies</h3>
      <% @list.bookmarks.each do |bookmark| %>
        <h4><%= bookmark.movie.title %></h4>
        <p><%= bookmark.comment %></p>
        <%= link_to bookmark_path(bookmark), class: 'card-remove-link', data: { turbo_method: :delete, turbo_confirm: "Do you delete this bookmark?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      <% end %>
    </div>
  </div>
