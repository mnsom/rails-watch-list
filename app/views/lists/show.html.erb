<div class="container m-3">
  <h1><%= @list.name %></h1>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-info"%>
  <%= link_to "Back to main page", lists_path, class: "btn btn-light"%>
  <div>
    <h3>Movies</h3>
    <% @list.bookmarks.each do |bookmark| %>
      <h4><%= bookmark.movie.title %></h4>
      <p><%= bookmark.comment %></p>
      <%= link_to list_bookmark_path(bookmark), class: 'card-remove-link', data: { turbo_method: :delete, turbo_confirm: "Do you delete this bookmark?" } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    <% end %>
  </div>
</div>
