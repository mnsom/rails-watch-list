<div class="container">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <%= image_tag("navbar.jpg") %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">My lists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">New list</a>
          </li>
          <li class="nav-item dropdown">
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" data-turbo-method="delete" href="#">Log out</a>
            </div>
          </li>
          <!--li class="nav-item"-->
          <!--/li-->
        </ul>
      </div>
    </div>
  </div>
  <div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?<%= @list.name %>);">
    <div class="container">
      <h1><%= @list.name  %></h1>
    </div>
  </div>
  <div class="container">
    <div class="button">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-info"%>
      <%= link_to "Back to main page", lists_path, class: "btn btn-light"%>
    </div>
    <div class="card">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-trip-infos">
            <div class="p-2">
              <h2><strong><%=bookmark.movie.title %></strong> <%=bookmark.movie.rating  %> ‚≠êÔ∏è</h2>
              <div class="mt-2">
                <p><%= bookmark.movie.overview %></p>
              </div>
            </div>
            <div class="card-trip-user">
              <p>üì£ <%= bookmark.comment %></p>
              <%= link_to bookmark_path(bookmark), class: 'car -remove-link', data: { turbo_method: :delete, turbo_confirm: "Do you delete this bookmark?" } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
